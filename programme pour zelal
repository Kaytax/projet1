    // ğŸ¬ Sucres dâ€™orge
    function createCandy() {
        const candy = document.createElement("div");
        candy.className = "candy";
        candy.textContent = "ğŸ­";
        candy.style.top = Math.random() * window.innerHeight + "px";
        document.body.appendChild(candy);
        setTimeout(() => candy.remove(), 12000);
    }
    for (let i = 0; i < 8; i++) setTimeout(createCandy, i * 900);
    setInterval(createCandy, 2200);

    // ğŸ± Chats MIAOU
    const catEmojis = ["ğŸ±", "ğŸ˜º", "ğŸ˜¸", "ğŸˆ"];
    function spawnCat(x, y) {
        const cat = document.createElement("div");
        cat.className = "cat";
        cat.style.left = x + "px";
        cat.style.top = y + "px";
        cat.innerHTML = `
            ${catEmojis[Math.floor(Math.random() * catEmojis.length)]}
            <span class="miaou">MIAOU</span>
        `;
        document.body.appendChild(cat);
        setTimeout(() => cat.remove(), 2500);
    }
    document.addEventListener("click", e => {
        for (let i = 0; i < 6; i++) {
            spawnCat(
                e.clientX + Math.random()*80 - 40,
                e.clientY + Math.random()*80 - 40
            );
        }
    });

    const santaGroup = document.getElementById("santaGroup");
    const santaText = document.getElementById("santaText");

    function loopSanta() {
        // dÃ©but hors Ã©cran
        santaGroup.style.transition = "none";
        santaGroup.style.left = "-300px";
        santaText.style.opacity = "0";

        // force reflow pour reset transition
        santaGroup.getBoundingClientRect();

        // aller au centre
        santaGroup.style.transition = "left 3s linear";
        santaGroup.style.left = "45%";

        // aprÃ¨s avoir atteint le milieu
        setTimeout(() => {
            santaText.style.opacity = "1"; // texte apparaÃ®t

            // aprÃ¨s 2s au centre
            setTimeout(() => {
                santaText.style.opacity = "0"; // texte disparaÃ®t

                // aller auâ€‘delÃ  du bord droit
                santaGroup.style.transition = "left 2s linear";
                santaGroup.style.left = "110%";

                // aprÃ¨s quâ€™il a dÃ©passÃ©
                setTimeout(() => {
                    loopSanta(); // recommence
                }, 2000);
            }, 2000);
        }, 3000); // 3s pour arriver au centre
    }

    // attend 3s au dÃ©but puis lance la boucle infinie
    setTimeout(loopSanta, 3000);

