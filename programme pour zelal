<body>

<!-- FOND LICORNES -->
<div class="unicorn-bg" id="unicornBg"></div>

<script>
    const unicornBg = document.getElementById("unicornBg");
    const catEmojis = ["üê±", "üò∫", "üò∏", "üêà"];

    // Remplir l'√©cran de licornes
    for (let i = 0; i < 220; i++) {
        const u = document.createElement("span");
        u.textContent = "ü¶Ñ";
        unicornBg.appendChild(u);
    }

    // Cr√©er un chat + MIAOU
    function spawnCat(x, y) {
        const cat = document.createElement("div");
        cat.className = "cat";
        cat.style.left = x + "px";
        cat.style.top = y + "px";
        cat.innerHTML = `
            ${catEmojis[Math.floor(Math.random() * catEmojis.length)]}
            <span class="miaou">MIAOU</span>
        `;
        document.body.appendChild(cat);

        setTimeout(() => cat.remove(), 2500);
    }

    // CLIC = CHATS
    document.addEventListener("click", (e) => {
        for (let i = 0; i < 6; i++) {
            spawnCat(
                e.clientX + Math.random() * 60 - 30,
                e.clientY + Math.random() * 60 - 30
            );
        }
    });
</script>

