<style>
    body {
        margin: 0;
        height: 100vh;
        overflow: hidden;
        font-family: 'Comic Neue', cursive;

        /* FOND 100% ROSE */
        background-color: #ff69b4;
    }

    /* LICORNES EN FOND */
    .unicorn-bg {
        position: fixed;
        inset: 0;
        font-size: 4rem;
        opacity: 0.25;
        pointer-events: none;
        display: grid;
        grid-template-columns: repeat(auto-fill, 80px);
        grid-auto-rows: 80px;
    }

    .unicorn-bg span {
        display: flex;
        align-items: center;
        justify-content: center;
        filter: hue-rotate(290deg);
    }

    /* CHATS */
    .cat {
        position: absolute;
        font-size: 3rem;
        animation: pop 2.5s ease-out forwards;
        pointer-events: none;
    }

    /* TEXTE MIAOU */
    .miaou {
        display: block;
        font-size: 2.2rem;
        color: #ff1493;
        text-shadow:
            0 0 5px #ff69b4,
            0 0 10px #ff1493,
            0 0 20px #c71585;
        animation: shake 0.25s infinite alternate;
    }

    @keyframes pop {
        0% {
            transform: scale(0) translateY(0);
            opacity: 1;
        }
        100% {
            transform: scale(1.4) translateY(-120px);
            opacity: 0;
        }
    }

    @keyframes shake {
        from { transform: rotate(-6deg); }
        to { transform: rotate(6deg); }
    }
