  <button class="retour" id="retour" onclick="retour()">retour</button>

  <script>
    const contenu = document.getElementById("contenu");
    const boutonRetour = document.getElementById("retour");
    let ancienContenu = contenu.innerHTML;

    function choixOui() {
      ancienContenu = contenu.innerHTML;
      contenu.innerHTML = `
        <div class="texte">
          oh oui bebe jâ€™aime ca
        </div>
      `;
      boutonRetour.style.display = "block";
    }

    function choixNon() {
      ancienContenu = contenu.innerHTML;
      contenu.innerHTML = `
        <div class="texte">
          je sais que tu assume pas accepte et viens dans mon lit
        </div>
      `;
      boutonRetour.style.display = "block";
    }

    function retour() {
      contenu.innerHTML = ancienContenu;
      boutonRetour.style.display = "none";
    }
  </script>

